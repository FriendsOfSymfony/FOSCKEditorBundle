<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="ivory_ck_editor.renderer" class="Ivory\CKEditorBundle\Renderer\CKEditorRenderer">
            <argument type="service" id="ivory_ck_editor.renderer.json_builder"/>
            <argument type="service" id="router"/>
            <argument type="service" id="assets.packages" on-invalid="null"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="templating" on-invalid="null"/>
            <argument type="expression">container.hasParameter('locale') ? parameter('locale') : null</argument>
        </service>

        <service id="ivory_ck_editor.renderer.json_builder" class="Ivory\JsonBuilder\JsonBuilder">
            <argument type="service" id="property_accessor" on-invalid="null" />
        </service>
    </services>
</container>
