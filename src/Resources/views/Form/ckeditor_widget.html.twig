{% block ckeditor_widget %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>

    {% if enable %}
        {{ block('_ckeditor_javascript') }}
    {% endif %}
{% endblock %}

{% block ckeditor_javascript %}
    {% if enable %}
        {{ block('_ckeditor_javascript') }}
    {% endif %}
{% endblock %}

{% block _ckeditor_javascript %}
    {% if autoload %}
        <script type="text/javascript" src="{{ ckeditor_translation_path(base_path) }}"></script>
        <script type="text/javascript" src="{{ ckeditor_js_path(js_path) }}"></script>
    {% endif %}
    <style type="text/css">
        {% if not poweredBy %}
            .ck.ck-powered-by {
                display: none;
            }
        {% endif %}
        {% if resize %}
            .ck.ck-editor__editable {
                resize: block;
            }
        {% endif %}
        {{ ckeditor_size(config) }}
        {% if styles %}
            {% for selector, selectorValue in styles %}
                {% for ruleName, value in selectorValue %}
                    {{ selector }} {
                        {{ ruleName }}: {{ value }};
                    }
                {% endfor %}
            {% endfor %}
        {% endif %}
    </style>

{#    {% for plugin_name, plugin in plugins %}#}
{#        <script type="module"  src="{{ plugin.path ~ plugin.filename }}"></script>#}
{#    {% endfor %}#}

    <script type="text/javascript">
        {{ ckeditor_widget(id, config, {
            plugins: plugins
        }) }}

        {% block ckeditor_widget_extra %}{% endblock ckeditor_widget_extra %}
    </script>
{% endblock %}
